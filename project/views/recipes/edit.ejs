<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Recipe</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/head') %>
  <%- include('../partials/header') %>
  <h2>Edit Recipe</h2>
  <form action="/recipes/<%= recipe._id %>?_method=PATCH" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= recipe.title %>" required>

    <label for="description">Description:</label>
    <textarea id="description" name="description" required><%= recipe.description %></textarea>

    <label for="ingredients">Ingredients:</label>
    <select id="ingredients" name="ingredients" multiple required>
      <% ingredients.forEach(ingredient => { %>
        <option value="<%= ingredient._id %>" <%= recipe.ingredients.includes(ingredient._id) ? 'selected' : '' %>><%= ingredient.name %></option>
      <% }) %>
    </select>

    <label for="user">User:</label>
    <select id="user" name="user" required>
      <% users.forEach(user => { %>
        <option value="<%= user._id %>" <%= recipe.user.equals(user._id) ? 'selected' : '' %>><%= user.username %></option>
      <% }) %>
    </select>

    <button type="submit">Update Recipe</button>
  </form>
</body>
</html>
